<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="15dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventTitle"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:fontFamily="sans-serif"
                android:text="Event Title"
                android:textSize="20sp"
                android:paddingBottom="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="DayOfWeek, Month DD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_view"
                        android:layout_weight="1"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:text="X:00 AM - Y:00 PM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/time_view"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="X People Going"
                        android:layout_height="wrap_content"
                        android:id="@+id/users_attending_view"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:text="Semantic Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/semantic_location_view"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp">

                <Button
                    android:text="Add to Calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_to_calendar_button_view"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textAlignment="textStart"
                    android:padding="0dp" />

                <Button
                    android:text="I'm Going"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attending_button_view"
                    android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:textAlignment="textEnd"
                    android:padding="0dp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>